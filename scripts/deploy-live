#!/usr/bin/env bash

echo "This script deploys the server and client to the live server."
echo "Please make sure that you have compiled the latest versions of both."
echo "[Press Enter to continue.]"
read

FILES="source/upstart/vndf-server.conf output/bin/vndf-server output/bin/vndf-client"

COMMANDS="
mkdir -p /opt/vndf
mv -f vndf-server /opt/vndf
mv -f vndf-server.conf /etc/init
mv -f vndf-client /srv/http/default
restart vndf-server"

./scripts/zwobot/zwobot-deploy "$FILES" "$COMMANDS" reineke.vndf.de
