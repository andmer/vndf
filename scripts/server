#!/usr/bin/env bash

source project.conf

SOURCE_FILES="\
source/server/main.c \
source/server/net.c \
source/server/clients.c \
source/common/vec.c"

HEADER_FILES=$(find source/server source/common -name "*.h")

function updateServer() {
	./scripts/zwobot/zwobot-compile "$SOURCE_FILES" "" "" $CORE_SERVICE_BINARY

	killall $CORE_SERVICE

	./$CORE_SERVICE_BINARY &
	PID=$!
}

updateServer
while true
do
	inotifywait -qq -e modify $SOURCE_FILES $HEADER_FILES
	echo "Change detected."
	updateServer
done
