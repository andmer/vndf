#!/usr/bin/env bash

if [ $# -ne 1 ]
then
	echo "Usage: $(basename $0) <dist-dir>"
	exit 1
fi

DIST_DIR=$1



source project.conf

cp -rf source/fonts $DIST_DIR &&
cp -rf source/images $DIST_DIR &&
cp -rf source/config/server $DIST_DIR &&
cp $CLIENT_CORE_BINARY $DIST_DIR &&
cp $CLIENT_UI_BINARY $DIST_DIR
