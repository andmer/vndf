world! {
	entity Ship from(Body, Visual) init_args(position: Vector3);

	system for(Body, Visual) on(Create(Ship)) = init_ship;
	system for(Body) on(Update) = integrate;
}

fn init_ship(position: Vector3, body: Body, visual: Visual) {
	body.position = position;
}

fn integrate(body: Body) {
	body.position += body.velocity;
}
